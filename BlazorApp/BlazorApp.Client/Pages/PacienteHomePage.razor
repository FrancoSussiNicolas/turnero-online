@page "/paciente/home"
@using API.Clients
@using DTOs
@using Shared
@inject NavigationManager NavigationManager

<div class="paciente-home">

    <!-- Sección de Bienvenida -->
    <div class="welcome-section">
        <div class="container">
            <div class="row align-items-center py-5">
                <div class="col-md-8">
                    <h1 class="display-4 fw-bold text-white mb-2">Bienvenido, @SessionManager.ApellidoNombre</h1>
                    <p class="lead text-white-50">Gestiona tus turnos médicos de forma rápida y sencilla.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección de Acciones -->
    <div class="container py-5">
        <div class="row justify-content-center mb-5">

            <!-- Card para Solicitar Turno -->
            <div class="col-md-4 mb-3 mb-md-0">
                <div class="card h-100 shadow-sm hover-card" @onclick='() => NavigationManager.NavigateTo("/paciente/nuevoTurno")' style="cursor: pointer;">
                    <div class="card-body text-center">
                        <div class="icon-circle bg-primary text-white mx-auto mb-3">
                            <i class="bi bi-calendar-plus fs-4"></i>
                        </div>
                        <h5 class="card-title">Solicitar un Turno</h5>
                        <p class="card-text text-muted small">Busca especialistas y reserva una nueva cita médica.</p>
                        <div class="mt-3">
                            <span class="badge bg-light text-dark">Reservar</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card para Ver Mis Turnos -->
            <div class="col-md-4 mb-3 mb-md-0">
                <div class="card h-100 shadow-sm hover-card" @onclick='() => NavigationManager.NavigateTo("/paciente/misTurnos")' style="cursor: pointer;">
                    <div class="card-body text-center">
                        <div class="icon-circle bg-success text-white mx-auto mb-3">
                            <i class="bi bi-calendar-check fs-4"></i>
                        </div>
                        <h5 class="card-title">Mis Turnos</h5>
                        <p class="card-text text-muted small">Consulta tus próximos turnos y tu historial de citas.</p>
                        <div class="mt-3">
                            <span class="badge bg-light text-dark">Consultar</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card para Mi Perfil (Opcional, pero recomendado) -->
            <div class="col-md-4">
                <div class="card h-100 shadow-sm hover-card" @onclick='() => NavigationManager.NavigateTo("/paciente/perfil")' style="cursor: pointer;">
                    <div class="card-body text-center">
                        <div class="icon-circle bg-info text-white mx-auto mb-3">
                            <i class="bi bi-person fs-4"></i>
                        </div>
                        <h5 class="card-title">Mi Perfil</h5>
                        <p class="card-text text-muted small">Actualiza tu información personal y datos de contacto.</p>
                        <div class="mt-3">
                            <span class="badge bg-light text-dark">Ver</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .paciente-home {
        min-height: 100vh;
        background-color: #f8f9fa;
    }

    .welcome-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        box-shadow: 0 4px 20px rgba(102, 126, 234, 0.4);
        margin-bottom: 2rem;
    }

    .icon-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hover-card {
        transition: all 0.3s ease;
        border: none;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
        }

    .bg-primary {
        background-color: #667eea !important;
    }

    .bg-success {
        background-color: #48bb78 !important;
    }

    .bg-info {
        background-color: #4299e1 !important;
    }
</style>