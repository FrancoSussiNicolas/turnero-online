@page "/profesional/home"
@using API.Clients
@using DTOs
@using Shared
@inject NavigationManager NavigationManager

<div class="profesional-home">
    <div class="welcome-section">
        <div class="container">
            <div class="row align-items-center py-5">
                <div class="col-md-8">
                    <h1 class="display-4 fw-bold text-white mb-2">Bienvenido, Profesional</h1>
                    <p class="lead text-white-50">Gestiona tu agenda, especialidades y obras sociales desde aquí</p>
                </div>
                <div class="col-md-4 text-end">
                    <div class="badge bg-success fs-6 px-3 py-2">@SessionManager.ApellidoNombre</div>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-5">
        <div class="row mb-5">
            @{
                // Creo un array anónimo de objetos que contiene la información de cuatro tarjetas (título, ícono, color de fondo, ruta y descripción) que luego se iteran en un bucle @foreach para generar dinámicamente la interfaz
                var cards = new[] {
                        new { Title = "Mi Especialidad", Icon = "bi-briefcase", BgColor = "bg-primary", Route = "/profesional/especialidad", Desc = "Selecciona o actualiza tu especialidad profesional" },
                        new { Title = "Obras Sociales", Icon = "bi-hospital", BgColor = "bg-success", Route = "/profesional/obras-sociales", Desc = "Administra las obras sociales por las que atiendes" },
                        new { Title = "Mis Turnos", Icon = "bi-calendar3", BgColor = "bg-info", Route = "/profesional/turnos", Desc = "Visualiza y gestiona tus turnos disponibles" },
                        new { Title = "Reporte Obras Sociales", Icon = "bi-calendar3", BgColor = "bg-info", Route = "/profesional/reporte", Desc = "Visualiza la cantidad de Pacientes que atiende por Obras Social" }
                        };
            }
            @foreach (var card in cards)
            {
                <div class="col-md-4 mb-3">
                    <div class="card h-100 shadow-sm hover-card" @onclick='() => NavigationManager.NavigateTo(card.Route)' style="cursor: pointer;">
                        <div class="card-body text-center">
                            <div class="icon-circle @card.BgColor text-white mx-auto mb-3">
                                <i class="bi @card.Icon fs-4"></i>
                            </div>
                            <h5 class="card-title">@card.Title</h5>
                            <p class="card-text text-muted small">@card.Desc</p>
                            <span class="badge bg-light text-dark mt-3">Ver</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .profesional-home {
        min-height: 100vh;
        background-color: #f8f9fa;
    }

    .welcome-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        box-shadow: 0 4px 20px rgba(102, 126, 234, 0.4);
        margin-bottom: 2rem;
    }

    .icon-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hover-card {
        transition: all 0.3s ease;
        border: none;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
        }

    .bg-primary {
        background-color: #667eea !important;
    }

    .bg-success {
        background-color: #48bb78 !important;
    }

    .bg-info {
        background-color: #4299e1 !important;
    }
</style>