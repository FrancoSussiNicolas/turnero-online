@page "/register"
@using System.ComponentModel.DataAnnotations
@using API.Clients
@using DTOs
@inject NavigationManager NavigationManager

<h1 class="text-center mt-4">Registro de Paciente</h1>

<div class="d-flex justify-content-center mt-3">
    <div class="card p-4 shadow-sm" style="width: 400px;">
        <EditForm Model="@registerModel" OnValidSubmit="@HandleRegister">
            <DataAnnotationsValidator />
            
            @if (!string.IsNullOrEmpty(error))
            {
                <div class="alert alert-danger" role="alert">
                    @error
                </div>
            }

            <div class="mb-3">
                <label class="form-label" for="register-apenom">Apellido y Nombre</label>
                <InputText @bind-Value="registerModel.ApellidoNombre" id="register-apenom" class="form-control" placeholder="Ingrese su apellido y nombre" />
                <ValidationMessage For="@(() => registerModel.ApellidoNombre)" />
            </div>

            <div class="mb-3">
                <label class="form-label" for="register-mail">Correo electrónico</label>
                <InputText @bind-Value="registerModel.Mail" id="register-mail" class="form-control" placeholder="ejemplo@correo.com" />
                <ValidationMessage For="@(() => registerModel.Mail)" />
            </div>

            <div class="mb-3">
                <label class="form-label" for="register-dni">DNI</label>
                <InputText @bind-Value="registerModel.DNI" id="register-dni" class="form-control" placeholder="Ingrese su DNI sin puntos" />
                <ValidationMessage For="@(() => registerModel.DNI)" />
            </div>

            <div class="mb-3">
                <label class="form-label" for="register-sexo">Sexo</label>
                <InputSelect @bind-Value="registerModel.Sexo" id="register-sexo" class="form-select">
                    <option value="">Seleccionar...</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                    <option value="Otro">Otro</option>
                </InputSelect>
                <ValidationMessage For="@(() => registerModel.Sexo)" />
            </div>

            <div class="mb-3">
                <label class="form-label" for="register-fechanac">Fecha de nacimiento</label>
                <InputDate @bind-Value="registerModel.FechaNacimiento" id="register-fechanac" class="form-control" />
                <ValidationMessage For="@(() => registerModel.FechaNacimiento)" />
            </div>

            <div class="mb-3">
                <label class="form-label" for="register-tel">Teléfono</label>
                <InputText @bind-Value="registerModel.Telefono" id="register-tel" class="form-control" placeholder="Ingrese su número de teléfono" />
                <ValidationMessage For="@(() => registerModel.Telefono)" />
            </div>

            <div class="mb-3">
                <label class="form-label" for="register-pass">Contraseña</label>
                <div class="input-group">
                    <InputText @bind-Value="registerModel.Contrasenia" id="register-pass" class="form-control" type="@passwordInputType" placeholder="Mínimo 8 caracteres, 1 número" />
                    <button class="btn btn-outline-secondary" type="button" @onclick="TogglePasswordVisibility">
                        @(showPassword ? "Ocultar" : "Ver")
                    </button>
                </div>
                <ValidationMessage For="@(() => registerModel.Contrasenia)" />
            </div>

            <button type="submit" class="btn btn-success w-100" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span> Registrando...</span>
                }
                else
                {
                    <span>Registrarse</span>
                }
            </button>
        </EditForm>

        <div class="text-center mt-3">
            <small>¿Ya tenés cuenta?</small><br />
            <NavLink href="/">Iniciá sesión</NavLink>
        </div>
    </div>
</div>

@code {
    private PacienteDTO registerModel = new();
    private string error = string.Empty;
    private bool isLoading = false; 

    private bool showPassword = false;
    private string passwordInputType = "password";

    private async void HandleRegister()
    {
        isLoading = true;
        error = string.Empty;

        try
        {
            await PacienteApiClient.AddAsync((PacienteDTO)registerModel);
            NavigationManager.NavigateTo("/"); 
        }
        catch (Exception exc)
        {
            error = exc.Message;
            StateHasChanged();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
        passwordInputType = showPassword ? "text" : "password";
    }
}